@page
@using RazorPagesUser.Models
@model RazorPagesUser.Pages.UserModel
@{    
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<form method="post" class="card p-3">
    <div class="row">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-0 align-middle">
        <label asp-for="NewUser.firstName">First Name</label>
        <input type="text" asp-for="NewUser.firstName" class="mr-5">
         <label asp-for="NewUser.lastName">Last Name</label>
        <input type="text" asp-for="NewUser.lastName" class="mr-5" />
        <button class="btn btn-primary">Add</button>
    </div>
</form>

<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    @foreach (var user in Model.users)
    {
        <tr>
            <td>@user.firstName</td>
            <td>@user.lastName</td>
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}